<h1>Jobs#new</h1>
<% if @job.errors.full_messages.any? %>  
<ul>     
	<% @job.errors.full_messages.each do |error_message| %>      
 	 <li><%= error_message %></li> <br />     
 	 <% end %>   
</ul> 
<% end %>

<%=form_for [@boat, @job] do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %><br><br>
	<%= f.label :origin %>
	<%= f.select( :origin, options_for_select(locs)) %>
	<br><br>
	<%= f.label :dest %>
	<%= f.select( :dest, options_for_select(locs)) %>
	<br><br>
	<%= f.label :container %>
	<%=f.number_field :container %><br><br>
	<%= f.label :cargo %>
	<%= f.text_field :cargo %><br><br>
	<%= f.label :cost %>
	<%= f.number_field :cost %><br><br>
	<%= f.submit %>
<% end %> 